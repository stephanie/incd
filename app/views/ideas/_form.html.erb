  <% end %>

  <%= f.fields_for :problem, @idea.description do |f| %>
  <%= f.text_area :content %>
  <% end %>

  <%= f.fields_for :solution, @idea.description do |f| %>
  <%= f.text_area :content %>
  <% end %>

  <%= f.fields_for :market, @idea.description do |f| %>
  <%= f.text_area :content %>
  <% end %>

  <%= f.fields_for :competition, @idea.description do |f| %>
  <%= f.text_area :content %>
  <% end %>

  <%= f.fields_for :demand, @idea.description do |f| %>
  <%= f.text_area :content %>
  <% end %>

