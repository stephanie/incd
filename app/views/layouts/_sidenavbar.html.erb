<!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li>First Time? <%= flash[:first_time_login] %></li>
      <li class="sidebar-brand">
        <%= link_to "#{current_user.first_name}" %>
      </li>
      <% @current_user_ideas.each do |idea| %>
        <li><%= link_to idea.name, idea %></li>
      <% end %>
      <hr/>
      <li><a href="#">Add idea</a></li>
      <li><a href="/ideas">Show all ideas</a></li>
      <li><%= link_to "Sign out", signout_url, method: 'delete' %></li>
    </ul>
  </div>

<% content_for :javascript do %>
  <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
    });
  </script>
<% end %>