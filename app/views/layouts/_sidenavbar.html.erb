<!-- Sidebar -->
<div id="sidebar-wrapper">
  <ul class="sidebar-nav">
    <li class="sidebar-brand">
      <%= link_to "#{current_user.first_name}" %>
    </li>
    <% @current_user_ideas.each do |current_user_idea| %>
      <li><%= link_to current_user_idea.name, current_user_idea %></li>
    <% end %>
    <li><%= link_to 'Add idea', new_idea_path %></li>
    <li><a href="/ideas">Show all ideas</a></li>
    <li><%= link_to "Sign out", signout_url, method: 'delete' %></li>
  </ul>
  </ul>
</div>

<% content_for :javascript do %>
  <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
    });
  </script>
<% end %>